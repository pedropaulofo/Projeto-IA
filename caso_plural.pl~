% Código prolog que analisa quais palavras pertencem a casos proibitivos
% para suceder a crase do caso plural (às) com base na estuturação da
% palavra, reconhcida através da identificação de terminações, conforme
% o léxico da lingua portugesa.
%

% Relação auxiliar para identificar o caracter que finaliza a palavra.
%
last_char(S, X) :-
    name(S, N),
    reverse(N, [F|_]),
    name(X, [F]).

% Relação auxiliar para identificar os 2 ultimos caracteres que
% finalizam a palavra.
%
terminacao(Palavra, T) :-  string_length(Palavra, L), L > 1, substring(Palavra, L-1, 2, T).

% Terminacoes proibitivas: casos gerais em que as palavras que terminam
% nas respectivas letras são casos proibitivos, levadas em consideração
% também as exceções.
%
%
proibida(Palavra) :-  \+ last_char(Palavra, s), \+ excecao(Palavra).

proibida(Palavra) :-  terminacao(Palavra, ás), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, es), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, és), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, ês), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, is), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, ns), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, os), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, ós), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, ôs), \+ excecao(Palavra).
proibida(Palavra) :-  terminacao(Palavra, us), \+ excecao(Palavra).
proibida(bit).



% Excecoes gerais
excecao(pás).
excecao(leis).
excecao(xerox).
excecao(xérox).
excecao(turnês).
excecao(motos).
excecao(fotos).
excecao(internets).

% Exceções em -m
excecao(nuvens).
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, agens), Palavra \== pagens.


% Exceções: feminino singular terminadas em -ão.
excecao(mãos).
excecao(razões).
excecao(rebeliões).
excecao(lições).
excecao(tensões).
excecao(visões).
excecao(questões).
excecao(Palavra) :-  string_length(Palavra, L), L > 6, substring(Palavra, L-5, 6, nçãos).
excecao(Palavra) :-  string_length(Palavra, L), L > 6, substring(Palavra, L-5, 6, nções).
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, ações), Palavra \== corações.
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, ssão).
excecao(Palavra) :-  string_length(Palavra, L), L > 6, substring(Palavra, L-5, 6, dições).
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, usões).
excecao(Palavra) :-  string_length(Palavra, L), L > 6, substring(Palavra, L-5, 6, ulsões).
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, nsões).
excecao(Palavra) :-  string_length(Palavra, L), L > 7, substring(Palavra, L-6, 7, versões).
excecao(Palavra) :-  string_length(Palavra, L), L > 5, substring(Palavra, L-4, 5, eções), Palavra \== cabeções, Palavra \== tropeções.


